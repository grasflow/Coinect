---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Coinect - Logowanie" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
    <main class="min-h-screen flex flex-col justify-center py-12 px-4 sm:px-6 lg:px-8">
      <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <a href="/" class="block group">
          <h1
            class="text-center text-4xl font-bold bg-gradient-to-r from-blue-600 to-blue-700 bg-clip-text text-transparent group-hover:from-blue-700 group-hover:to-blue-800 transition-all"
          >
            Coinect
          </h1>
        </a>
      </div>

      <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-[576px]">
        <div class="bg-white/80 backdrop-blur-sm py-10 px-6 shadow-xl ring-1 ring-gray-900/5 sm:rounded-2xl sm:px-10">
          <slot />
        </div>
      </div>
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
