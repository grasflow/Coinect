---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Coinect" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav class="bg-white shadow-sm border-b" aria-label="Główna nawigacja">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <a href="/" class="text-xl font-bold text-gray-900">Coinect</a>
          </div>
          <div class="flex items-center space-x-8">
            <a href="/" class="text-gray-600 hover:text-gray-900 rounded-md text-sm font-medium">Wpisy czasu</a>
            <a href="/clients" class="text-gray-600 hover:text-gray-900 rounded-md text-sm font-medium">Klienci</a>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
