---
import AuthLayout from "@/layouts/AuthLayout.astro";
import { ResetPasswordForm } from "@/components/features/auth/ResetPasswordForm";

// Token będzie obsłużony po stronie klienta z URL hash
// Supabase używa fragmentu URL (#access_token=...) dla magic links
---

<AuthLayout title="Coinect - Resetowanie hasła">
  <div class="mb-8">
    <h2 class="text-2xl font-bold text-gray-900 tracking-tight">Nowe hasło</h2>
    <p class="mt-2 text-sm text-gray-600">Wprowadź nowe, bezpieczne hasło</p>
  </div>

  <ResetPasswordForm client:only="react" />
</AuthLayout>
