---
import Layout from "@/layouts/Layout.astro";
import { InvoiceEditView } from "@/components/features/invoices";

const { id } = Astro.params;

if (!id) {
  return Astro.redirect("/invoices");
}

const title = `Edycja Faktury - Coinect`;
---

<Layout title={title}>
  <InvoiceEditView invoiceId={id} client:load />
</Layout>
